<% include ../partials/head%>
<% include ../partials/header%>


    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit Post</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/home/<%= editPost._id %>?_method=PUT" method="Post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image url" value="<%= editPost.image %>">
                    </div>
                    <!--<div class="form-group">
                        <input class="form-control" type="file" name="image" placeholder="upload photo">
                    </div>-->
                    <div class="form-group">
                        <input class="form-control" type="text" name="caption" placeholder="caption" value="<%= editPost.caption %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" btn>Submit!</button>
                    </div>
                </form>
                <a href="/home">Back to Photo Gallery</a>
            </div>
        </div>
    </div>

