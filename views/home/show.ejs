<% include ../partials/head%>
<% include ../partials/header%>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h3>PhotoSphere</h3>
                <div>
                    <li class="list-group-item active">info 1</li>
                    <li class="list-group-item"><a href=""><i class="fa fa-user" aria-hidden="true"  ></i> Author here</a></li>
                    <li class="list-group-item">Posted 4 days ago</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" src="/<%=displayPost.image %>">
                    <div class="caption-full">
                        <h4 class="caption">
                           <%=displayPost.caption %>
                        </h4>
                    </div>
                </div>

                <!--Comment section-->
                <div class="well">
                    
                    <div class="text-right">
                        <a class="btn btn-xs btn-success" href="#">Like <i class="fa fa-thumbs-up" aria-hidden="true"  ></i></a>
                        <a class="btn btn-xs btn-success" href="/home/<%=displayPost._id%>/comment/new">Comment <i class="fa fa-plus" ></i></a>
                    </div>
                    <hr>
                    

                    <%  displayPost.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                 <strong><%=comment.author%></strong>
                                 <span class="pull-right">10 days ago</span>
                                <p>
                                    <%=comment.text%>
                                </p>
                               
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>


<% include ../partials/footer%>
<% include ../partials/foot %>